{{! Description: Main view of the application }}
{{#if user}}
  <div class="flex justify-center items-center h-screen bg-gray-200">
    <div class="bg-white p-8 rounded shadow-md w-96">
      <h1 class="text-3xl font-bold mb-4">User Panel</h1>
      <p class="text-gray-700 text-sm font-bold mb-2">Name:
        {{user.first_name}}</p>
      <p class="text-gray-700 text-sm font-bold mb-2">Last Name:
        {{user.last_name}}</p>
      <p class="text-gray-700 text-sm font-bold mb-2">Email: {{user.email}}</p>
      <p class="text-gray-700 text-sm font-bold mb-2">Role: {{user.role}}</p>
      <button class="bg-blue-500 text-white p-2 rounded mt-2">
        <a href="/api/sessions/logout" class="block text-center">Logout</a>
      </button>
      <button class="bg-blue-500 text-white p-2 rounded text-center">
        <a href="/" class="block text-center">Ir a comprar</a>
      </button>
    </div>
  </div>
{{else}}
  <div class="flex justify-center items-center h-screen bg-gray-200">
    <div class="bg-white p-8 rounded shadow-md w-96">
      <h1 class="text-3xl font-bold mb-4">User Panel</h1>
      <p class="text-gray-700 text-sm font-bold mb-2">You are not logged in</p>
      <button class="w-1/3 bg-blue-500 text-white p-2 rounded mt-2">
        <a href="/sessions/login" class="block text-center p-1">Login</a>
      </button>
      <button class="w-1/3 bg-blue-500 text-white p-2 rounded mt-2">
        <a href="/sessions/register" class="block text-center p-1">Register</a>
      </button>
    </div>
  </div>
{{/if}}